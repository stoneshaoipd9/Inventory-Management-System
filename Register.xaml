<Window x:Class="AutoParts.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoParts"
        mc:Ignorable="d"
        Title="Register" Height="600.529" Width="600" ResizeMode="NoResize">
    <Grid Background="LightSteelBlue">
        <GroupBox Header="Register" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Height="563" Margin="10,0,0,0" VerticalAlignment="Top" Width="574">
        </GroupBox>
        <Label Name="lblMessage" Content="" Foreground="Red" HorizontalAlignment="Left" Margin="218,419,0,0" VerticalAlignment="Top" Width="292"/>
        <Label Content="First Name"  FontSize="20" FontWeight="Normal"  HorizontalAlignment="Left" Margin="77,75,0,0" VerticalAlignment="Top"/>
        <Label Content="Last Name"   FontSize="20" FontWeight="Normal"  HorizontalAlignment="Left" Margin="81,142,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" FontSize="20" FontWeight="Normal"  HorizontalAlignment="Left" Margin="90,277,0,0" VerticalAlignment="Top"/>
        <Label Content="Confirm Password" FontSize="20" FontWeight="Normal"  HorizontalAlignment="Left" Margin="15,344,0,0" VerticalAlignment="Top"/>
        <Label Content="UserName" FontSize="20" FontWeight="Normal"  HorizontalAlignment="Left" Margin="81,208,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbFName" HorizontalAlignment="Left" Height="28" Margin="218,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292"/>
        <TextBox Name="tbLName" HorizontalAlignment="Left" Height="28" Margin="218,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292"/>
        <TextBox Name="tbUserName" HorizontalAlignment="Left" Height="28" Margin="218,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292"/>
        <PasswordBox Name="pbPwd" HorizontalAlignment="Left" Height="28" Margin="218,285,0,0" VerticalAlignment="Top" Width="292"/>
        <PasswordBox Name="pbCFMPwd" HorizontalAlignment="Left" Height="28" Margin="218,350,0,0" VerticalAlignment="Top" Width="292"/>
        <Button Name="btnCancel" Content="Cancel" FontSize="20" FontWeight="Bold"  HorizontalAlignment="Left" Margin="43,487,0,0" VerticalAlignment="Top" Width="85" Click="btnCancel_Click"/>
        <Button Name="btnReset" Content="Reset" FontSize="20" FontWeight="Bold"  HorizontalAlignment="Left" Margin="179,487,0,0" VerticalAlignment="Top" Width="85" Click="btnReset_Click"/>
        <Button Name="btnSave" Content="Save" FontSize="20" FontWeight="Bold"  HorizontalAlignment="Left" Margin="455,486,0,0" VerticalAlignment="Top" Width="85" Click="btnSave_Click"/>
        <Button x:Name="btnLogin" Content="Login" FontSize="20" FontWeight="Bold"  HorizontalAlignment="Left" Margin="314,487,0,0" VerticalAlignment="Top" Width="85" Click="btnLogin_Click"/>
    </Grid>
</Window>
